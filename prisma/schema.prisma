// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String?  @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  habits Habit[]
  events Event[]

  @@map("users")
}

model Habit {
  id        String   @id @default(cuid())
  userId    String
  title     String
  streak    Int      @default(0)
  lastTick  DateTime?
  schedule  Json?    // Flexible schedule configuration
  context   Json?    // Additional metadata
  color     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("habits")
}

model Event {
  id      String   @id @default(cuid())
  userId  String
  type    String   // habit_success, habit_deleted, mentor_nudge, etc.
  payload Json?    // Event-specific data
  ts      DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("events")
}

model VoiceCache {
  id    String @id // Cache key
  text  String
  voice String // Voice ID
  url   String // Generated audio URL
  createdAt DateTime @default(now())

  @@map("voice_cache")
} 